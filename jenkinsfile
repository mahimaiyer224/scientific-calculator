pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/mahimaiyer224/scientific-calculator.git', branch: 'master'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Docker Build') {
            steps {
                sh 'docker build -t mahimaiyer/scientific-calculator .'
            }
        }
        stage('Run Container') {
            steps {
                // Run in detached mode
                sh 'docker run -d --name scientific_calculator mahimaiyer/scientific-calculator'
            }
        }
        stage('Exec into Container') {
            steps {
                // Optionally exec into the container for interaction (for debugging or manual testing)
                sh 'docker exec -it scientific_calculator /bin/bash'
            }
        }
    }
}
